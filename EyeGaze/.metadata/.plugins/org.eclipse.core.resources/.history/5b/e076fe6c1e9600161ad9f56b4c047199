import java.awt.BorderLayout;
//Code that has handler properties
import java.awt.event.ActionListener;
import java.awt.event.ActionEvent;
//Has GUI properties (minimize, maximize, buttons).
import javax.swing.JFrame;
//Allows you to output text on the screen
import javax.swing.JLabel;
import javax.swing.JTextField;
import javax.swing.JOptionPane;

//Secondary inherits properties of JFrame
public class secondary extends JFrame{

		private JTextField item1;
		private JTextField item2;
		private JLabel item3;
		
		//Constructor
		public secondary(){
			//Adds title to GUI
			super("Stimulus Application");
			//Gives us default layout
			setLayout(new BorderLayout());
			
			item3 = new JLabel("ICAS Eye Gaze Stimulus");
			add(item3,BorderLayout.PAGE_START);
				
			item2 = new JTextField("Enter Name here");
			add(item2,BorderLayout.CENTER);
			
			//builds an action listenner object
			thehandler handler = new thehandler();
			item1.addActionListener(handler);
			item2.addActionListener(handler);
		}
		
		//Building a class inside a class makes it inherit all of the mother class' properties
		private class thehandler implements ActionListener{
			public void actionPerformed(ActionEvent event){
				String string = "";
				
				if (event.getSource() == item1) //if they clicked enter on item 1
					string = String.format("field 1: %s", event.getActionCommand());
				else if (event.getSource() == item2) //if they clicked enter on item 1
					string = String.format("field 2: %s", event.getActionCommand());
				
				//Blank window
				JOptionPane.showMessageDialog(null,string);
			}
		}
		
}
